{
  "name": "@meluiz/memojs",
  "version": "1.0.0",
  "description": "A simple and fast internal memory cache for node.js.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "author": "meluiz",
  "license": "ISC",
  "keywords": [
    "stale",
    "revalidate",
    "cache",
    "caching",
    "memory",
    "storage",
    "node",
    "internal",
    "local",
    "simple",
    "object",
    "offline",
    "ram"
  ],
  "tags": [
    "stale",
    "revalidate",
    "cache",
    "caching",
    "memory",
    "storage",
    "node",
    "internal",
    "local",
    "simple",
    "object",
    "offline",
    "ram"
  ],
  "engines": {
    "node": ">=10"
  },
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "tsc -d && esbuild index.js --minify --outfile=index.js --allow-overwrite",
    "commit": "git-cz",
    "prepare": "husky install",
    "postversion": "npm publish",
    "format": "prettier --write .",
    "dev:watch": "nodemon --watch \"./src/lib/**\" --ext \"ts\"  --exec \"ts-node\"",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "repository": "https://github.com/meluiz/memojs.git",
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@types/node": "^18.11.18",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "^0.16.14",
    "husky": "^8.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "private": false
}
